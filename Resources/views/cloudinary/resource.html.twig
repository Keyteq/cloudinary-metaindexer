{% set imageClass = imageClass|default('') %}
{% set imageWidth = imageWidth|default(400) %}
{% set imageHeight = imageHeight|default(400) %}

<div class="cloudinary-resource cloudinary-resource-resourcetype--{{ resource.resourceType }}
cloudinary-resource-format--{{ resource.format }}
cloudinary-resource-ext--{{ resource.getFileExtension() }}"
>
    <a href="{{ resource.secureUrl }}" target="_blank">
        {% if resource.resourceType == 'raw' %}
            {{ resource.getPublicId() }}
        {% else %}
            {{ resource.getThumbnail({
                'class': imageClass,
                'width': imageWidth,
                'heigt': imageHeight
            })|raw }}
        {% endif %}
    </a>
</div>